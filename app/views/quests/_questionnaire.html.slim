.input-wrapper.input-wrapper--largespace.input-wrapper--icon
  = form.text_field :phone, placeholder: 'Контактный телефон', class: 'input', value: item.data['phone']
  .input-wrapper__icon

.input-wrapper.input-wrapper--largespace.input-wrapper--icon
  = form.text_field :project, placeholder: 'Твой самый крутой проект', class: 'input', value: item.data['project']
  .input-wrapper__icon

.input-wrapper.input-wrapper--largespace.input-wrapper--icon
  = form.text_field :experience, placeholder: 'Сколько лет кодишь на Ruby', class: 'input', value: item.data['experience']
  .input-wrapper__icon

.input-wrapper.input-wrapper--largespace.input-wrapper--icon
  = form.text_field :social, placeholder: 'Как тебя можно найти в соцсетях', class: 'input', value: item.data['social']
  .text.text--supersmall.text--addition.text--italic Harbahabr, Facebook, VK, LinkedIn, Мой круг
